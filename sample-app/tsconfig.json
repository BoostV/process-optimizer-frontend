{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@sample/*": ["./src/*"],
      "@/*": ["../package/core/src/*"]
    }
  },
  "include": ["./src", "./src/**/*.json", "./sample-data/**/*.json"],
  "references": [
    {
      "path": "../packages/api"
    },
    {
      "path": "../packages/core"
    },
    {
      "path": "../packages/plots"
    }
  ]
}
