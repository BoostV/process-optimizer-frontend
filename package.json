{
  "name": "process-optimizer-frontend",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/BoostV/process-optimizer-frontend.git",
  "author": "Jakob Langdal <jakob.langdal@alexandra.dk>",
  "license": "BSD-3-Clause",
  "private": true,
  "workspaces": [
    "sample-app",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "yarn --cwd packages/api build && yarn --cwd packages/core build && yarn --cwd packages/plots build",
    "dev": "yarn --cwd sample-app dev",
    "build": "yarn --cwd packages/api build && yarn --cwd packages/core build && yarn --cwd packages/plots build && yarn --cwd sample-app build",
    "test": "yarn --cwd packages/core test --run && yarn --cwd sample-app test --run",
    "start": "yarn --cwd sample-app start",
    "openapi": "yarn --cwd packages/api openapi && yarn --cwd packages/api build",
    "prepare": "husky install",
    "formatAll": "prettier --write .",
    "prettier": "prettier --check ."
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "typescript": "^4.7.4",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "@process-optimizer-frontend/eslint-config": "1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-react": "^7.31.6",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.6.1",
    "prettier": "2.7.1"
  }
}
